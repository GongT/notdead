{
	"name": "@gongt/stillalive",
	"version": "1.2.0",
	"description": "read from a stream, pipe the last line to stderr. with a spining animation.",
	"main": "./dist/index.js",
	"module": "./dist/index.module.js",
	"typings": "dist/_export_all_in_once_index.d.ts",
	"scripts": {
		"watch": "yon run build -w",
		"clean": "rimraf dist",
		"build": "yon build:exports && rollup -c build/rollup.config.js",
		"test": "tsc -p src/tsconfig.test.json && node dist/test.js",
		"prepublishOnly": "yon clean && yon build",
		"lint": "tslint -c build/tslint.json 'src/**/*.ts'",
		"build:exports": "export-all-in-one \"src/tsconfig.json\" && export-all-in-one -c \"src/_tsconfig.d.json\""
	},
	"dependencies": {
		"ora": "^3.0.0",
		"split2": "^3.0.0"
	},
	"devDependencies": {
		"@gongt/export-all-in-one": "^1.1.2",
		"@gongt/single-dog": "^1.1.111111",
		"@types/log-symbols": "^2.0.0",
		"@types/node": "^10.12.1",
		"@types/ora": "^1.3.4",
		"@types/split2": "^2.1.6",
		"chokidar": "^2.0.4",
		"rimraf": "^2.6.2",
		"rollup": "^0.66.6",
		"rollup-plugin-commonjs": "^9.2.0",
		"rollup-plugin-node-resolve": "^3.4.0",
		"rollup-plugin-typescript2": "^0.17.2",
		"typescript": "^3.1.5",
		"yarn-or-npm": "^2.0.4"
	},
	"peerDependencies": {
		"source-map-support": "*"
	}
}
